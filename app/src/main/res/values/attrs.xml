<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ScratchCardView">
        <attr name="scratchSrc" format="reference"/>
        <attr name="scratchSrc2" format="reference"/>
    </declare-styleable>

    <declare-styleable name="FlipCardView">
        <attr name="cardSrc" format="reference"/>
        <attr name="cardSrcCopy" format="reference"/>
        <attr name="cardSrc2" format="reference"/>
        <attr name="cardSrc3" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="title" format="string" />
        <attr name="right_title" format="string" />
        <attr name="back_src" format="reference" />
        <attr name="right_src" format="reference" />
        <attr name="imageWidth3" format="dimension"/>
        <attr name="right_imageWidth3" format="dimension"/>
        <attr name="imageHeight3" format="dimension"/>
        <attr name="right_imageHeight3" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BalanceInquiryView">
    <attr name="imageWidth" format="dimension"/>
    <attr name="imageWidth2" format="dimension"/>
    <attr name="imageHeight" format="dimension"/>
    <attr name="imageHeight2" format="dimension"/>
    <attr name="imageSrc" format="reference"/>
    <attr name="imageSrc2" format="reference"/>
    <attr name="textColor" format="color|reference"/>
    <attr name="textWidth" format="dimension"/>
    <attr name="textHeight" format="dimension"/>
    <attr name="textContent" format="string"/>
    </declare-styleable>


</resources>
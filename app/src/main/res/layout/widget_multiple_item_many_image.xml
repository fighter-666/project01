<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_rectangle19">

    <ImageView
        android:id="@+id/ivPicAreaImageUrl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="34dp"
        android:src="@drawable/falls1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivPicAreaImageUrl3"
        app:layout_constraintRight_toLeftOf="@id/ivPicAreaImageUrl2"
        />

    <ImageView
        android:id="@+id/ivPicAreaImageUrl2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        android:src="@drawable/falls1"
        app:layout_constraintLeft_toRightOf="@id/ivPicAreaImageUrl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/ivPicAreaImageUrl3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="34dp"
        android:src="@drawable/falls1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPicAreaImageUrl"
        app:layout_constraintBottom_toTopOf="@id/tvMainTitleTitle"
        app:layout_constraintRight_toLeftOf="@id/ivPicAreaImageUrl4"
        />

    <ImageView
        android:id="@+id/ivPicAreaImageUrl4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        android:src="@drawable/falls1"
        app:layout_constraintLeft_toRightOf="@id/ivPicAreaImageUrl3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPicAreaImageUrl3"
        />

    <TextView
        android:id="@+id/tvMainTitleTitle"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="9dp"
        android:text="加装【副卡】，一份套餐全家用"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPicAreaImageUrl3"
        app:layout_constraintBottom_toTopOf="@id/tvSaleTipList"/>

    <TextView
        android:id="@+id/tvSaleTipList"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/shape_rectangle18"
        android:text="赠新人礼包"
        android:textColor="#ea5858"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMainTitleTitle" />

    <TextView
        android:id="@+id/tvSaleTipListSecond"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="赠美团神券"
        android:background="@drawable/shape_rectangle18"
        android:textColor="#ea5858"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tvSaleTipList"
        app:layout_constraintLeft_toRightOf="@id/tvSaleTipList" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="1353dp"
    android:background="#f4f4f4"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/tv1_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="评价"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:src="@drawable/tick" />

                <TextView
                    android:id="@+id/tv2_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成功充值 100元"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="20sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="充值号码"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="173 666 99999"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:gravity="right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="支付金额"
                    android:layout_marginRight="175dp"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:text="官方-0.5元"
                    android:textColor="#fe5561"
                    android:background="@drawable/shape_rectangle17"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="99.5元"
                    android:layout_marginLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="36dp"
                    android:text="继续充值"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/shape_rectangle"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rectangle2"
                    android:gravity="center"
                    android:layout_marginLeft="28dp"
                    android:text="查询余额"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_rectangle3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/beans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值奖励 "
                    android:paddingLeft="5dp"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:gravity="left"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+80金豆"
                    android:textColor="#fe5561"
                    android:textSize="13sp"
                    android:gravity="left"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="，多充多得哦～ "
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:gravity="left"
                    />

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="18dp"
                    android:text="兑好物"
                    android:textColor="#ffffff"
                    android:textSize="11sp"
                    android:background="@drawable/shape_rectangle4"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/close" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="147dp"
                android:orientation="vertical"
                android:background="@drawable/shape_rectangle5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="为您推荐以下服务"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:layout_marginRight="130dp"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:layout_gravity="center"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_marginLeft="15dp"
                        />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="9dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/arrow" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="269dp"
                android:orientation="vertical"
                android:layout_marginTop="13dp"
                android:paddingLeft="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_rectangle7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_rectangle8"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:background="@drawable/ellipse">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/image5" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开启自动充值得金豆"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="首次开启得"
                                android:textColor="#999999"
                                android:textSize="12sp"
                                />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/bean" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10金豆"
                                android:textColor="#f3bb62"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_rectangle9"
                        android:gravity="center"
                        android:text="去开启"
                        android:textColor="#5b82ff"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_rectangle10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/shape_rectangle8"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:background="@drawable/ellipse">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/image6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="看科普视频得金豆"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="14dp"
                                android:text="0/6"
                                android:textColor="#5b82ff"
                                android:background="@drawable/shape_rectangle15"
                                android:layout_marginLeft="8dp"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:gravity="left"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="多看多得浏览15s得多看多得..."
                                android:textColor="#999999"
                                android:textSize="12sp"
                                />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/bean" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5金豆"
                                android:textColor="#f3bb62"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_rectangle9"
                        android:text="去看看"
                        android:textColor="#5b82ff"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_rectangle10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐兑换好物："
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:gravity="left"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共有"
                        android:paddingLeft="70dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:gravity="left"
                        />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/bean" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1356金豆"
                        android:textColor="#f3bb62"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="逛更多"
                        android:layout_marginLeft="4dp"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:gravity="left"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:text="&#62;"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:orientation="vertical"
                android:background="@drawable/shape_rectangle5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赠送翻牌机会 1 次"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计剩余3次"
                        android:paddingLeft="13dp"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:gravity="left"
                        />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="55dp"
                        android:src="@drawable/refresh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:text="换一换"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
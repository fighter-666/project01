<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="1353dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f4f4f4">

    <ImageView
        android:layout_width="11dp"
        android:layout_height="19dp"
        android:src="@drawable/back"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="right"
        android:text="评价"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_iv1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/tick"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tv1" />

    <TextView
        android:id="@+id/tv_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成功充值 100元"
        android:layout_marginLeft="9dp"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/iv_iv1"
        app:layout_constraintTop_toBottomOf="@id/tv_tv1" />

    <TextView
        android:id="@+id/tv_tv3"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="充值号码"
        android:textColor="#999999"
        android:layout_marginTop="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tv2"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="173 666 99999"
        android:textColor="#333333"
        android:textSize="14sp"
        android:gravity="right"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_tv3"
        app:layout_constraintTop_toBottomOf="@id/tv_tv2"
        />

    <TextView
        android:id="@+id/tv_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="支付金额"
        android:layout_marginTop="12dp"
        android:layout_marginRight="175dp"
        android:textColor="#999999"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tv3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_tv5"
        android:layout_width="52dp"
        android:layout_height="15dp"
        android:text="官方-0.5元"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:textColor="#fe5561"
        android:background="@drawable/shape_rectangle17"
        app:layout_constraintTop_toBottomOf="@id/tv_tv3"
        app:layout_constraintRight_toLeftOf="@id/tv_tv6"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tv_tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="99.5元"
        android:layout_marginLeft="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_tv4"
        app:layout_constraintTop_toBottomOf="@id/tv_tv3"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:text="继续充值"
        android:layout_weight="1"
        android:textColor="#333333"
        android:layout_marginTop="27dp"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_tv6"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_rectangle"/>

    <TextView
        android:id="@+id/tv2_tv"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:background="@drawable/shape_rectangle2"
        android:gravity="center"
        android:text="查询余额"
        android:layout_marginTop="27dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tv6"
        android:textSize="16sp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="334dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/shape_rectangle3"
        app:layout_constraintTop_toBottomOf="@id/tv2_tv"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/im1_im"
            android:layout_width="23dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/beans" />

        <TextView
            android:id="@+id/tv2_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值奖励 "
            android:paddingLeft="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:textColor="#666666"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/im1_im"
            app:layout_constraintLeft_toRightOf="@id/im1_im"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/tv2_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+80金豆"
            android:layout_marginTop="15dp"
            android:textColor="#fe5561"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/im1_im"
            app:layout_constraintLeft_toRightOf="@id/tv2_tv2"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/tv2_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="，多充多得哦～ "
            android:textColor="#666666"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/im1_im"
            app:layout_constraintLeft_toRightOf="@id/tv2_tv3"
            android:gravity="left"
            />

        <TextView
            android:layout_width="52dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:text="兑好物"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/im1_im"
            app:layout_constraintLeft_toRightOf="@id/tv2_tv4"
            android:background="@drawable/shape_rectangle4"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/close"
            app:layout_constraintBottom_toBottomOf="@id/im1_im"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="334dp"
        android:layout_height="147dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_rectangle5"
        app:layout_constraintTop_toBottomOf="@id/cl1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:id="@+id/cl2_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为您推荐以下服务"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="6dp"
            app:layout_constraintRight_toLeftOf="@id/cl2_im1"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/cl2_im1"
            android:layout_width="5dp"
            android:layout_height="9dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/arrow" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl2_tv1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl3"
        android:layout_width="334dp"
        android:layout_height="269dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_rectangle5"
        app:layout_constraintTop_toBottomOf="@id/cl2"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl3_cl1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ellipse"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/cl3_cl1_im"
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:src="@drawable/image5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/cl3_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启自动充值得金豆"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/cl3_cl1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/cl3_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首次开启得"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/cl3_cl1"
            app:layout_constraintTop_toBottomOf="@id/cl3_tv1"
            />

        <ImageView
            android:id="@+id/cl3_tv3"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/bean"
            app:layout_constraintLeft_toRightOf="@id/cl3_tv2"
            app:layout_constraintTop_toBottomOf="@id/cl3_tv1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10金豆"
            android:textColor="#f3bb62"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/cl3_tv3"
            app:layout_constraintTop_toBottomOf="@id/cl3_tv1"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_rectangle9"
            android:gravity="center"
            android:text="去开启"
            android:textColor="#5b82ff"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="13sp" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_rectangle10"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl3_cl2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ellipse"
            android:gravity="center"
            android:layout_marginTop="86dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/cl3_cl2_im"
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:src="@drawable/image6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/cl3_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看科普视频得金豆"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/cl3_cl1"
            android:layout_marginTop="89dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/cl3_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多看多得浏览15s得多看多得..."
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/cl3_cl1"
            app:layout_constraintTop_toBottomOf="@id/cl3_tv4"
            />

        <ImageView
            android:id="@+id/cl3_tv6"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/bean"
            app:layout_constraintLeft_toRightOf="@id/cl3_tv5"
            app:layout_constraintTop_toBottomOf="@id/cl3_tv4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5金豆"
            android:textColor="#f3bb62"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/cl3_tv6"
            app:layout_constraintTop_toBottomOf="@id/cl3_tv4"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="94dp"
            android:background="@drawable/shape_rectangle9"
            android:gravity="center"
            android:text="去看看"
            android:textColor="#5b82ff"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="13sp" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_rectangle10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_rectangle_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <RelativeLayout
            android:id="@+id/rlWarn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_orange_radius_8"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="6dp"
                android:contentDescription="关闭"
                android:src="@drawable/ic_orange_close" />

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3.5dp" />

            <TextView
                android:id="@+id/tvWarnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/ivIcon"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black_333333"
                android:textSize="12dp"
                tools:text="亲你的流量亲你的流量亲你的流量亲你的流量" />

            <Button
                android:id="@+id/btnWarn"
                android:layout_width="63dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_orange_btn"
                android:maxLength="4"
                android:textColor="@color/white"
                android:textSize="12dp"
                tools:text="加流量啊" />
        </RelativeLayout>


    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/rounded_rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rlWarn"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已订购流量"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerView"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_height="wrap_content"
        tools:itemCount="3"
        tools:listitem="@layout/item_province"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerView2"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_outline"
        tools:itemCount="3"
        tools:listitem="@layout/item_province"
        app:layout_constraintTop_toBottomOf="@id/recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"

        />

        <TextView
            android:id="@+id/tvBottomTitle"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="1、新订购流量的展示会有一定延迟，如有请稍后再查。
           2、结转流量，是上月未使用完、且可在本月继续"
            android:textColor="@color/black_999999"
            android:textSize="13sp"
            android:gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginStart="11dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerView2"
            app:layout_constraintLeft_toLeftOf="parent"

            />
        
        <TextView
            android:layout_width="220dp"
            android:layout_height="38dp"
            android:text="充流量"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/shape_rectangle_button"
            app:layout_constraintTop_toBottomOf="@id/tvBottomTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
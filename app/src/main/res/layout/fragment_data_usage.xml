<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_rectangle_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">


    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/rounded_rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已订购流量"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerView"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_height="wrap_content"
        tools:itemCount="3"
        tools:listitem="@layout/item_province"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerView2"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_outline"
        tools:itemCount="3"
        tools:listitem="@layout/item_province"
        app:layout_constraintTop_toBottomOf="@id/recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"

        />

        <TextView
            android:id="@+id/tvBottomTitle"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="1、新订购流量的展示会有一定延迟，如有请稍后再查。
           2、结转流量，是上月未使用完、且可在本月继续"
            android:textColor="@color/black_999999"
            android:textSize="13sp"
            android:gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginStart="11dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerView2"
            app:layout_constraintLeft_toLeftOf="parent"

            />
        
        <TextView
            android:layout_width="220dp"
            android:layout_height="38dp"
            android:text="充流量"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/shape_rectangle_button"
            app:layout_constraintTop_toBottomOf="@id/tvBottomTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cl4Tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:text="赠送翻牌机会 1 次"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cl4Tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:text="累计剩余3次"
            android:textColor="#999999"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/cl4Tv7"
            app:layout_constraintLeft_toRightOf="@id/cl4Tv7"
            app:layout_constraintTop_toTopOf="@id/cl4Tv7" />

        <ImageView
            android:id="@+id/cl3Im2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/refresh"
            app:layout_constraintBottom_toBottomOf="@id/cl4Tv7"
            app:layout_constraintRight_toLeftOf="@id/cl4Tv9"
            app:layout_constraintTop_toTopOf="@id/cl4Tv7" />

        <TextView
            android:id="@+id/cl4Tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="换一换"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/cl4Tv7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/cl4Tv7" />

        <ImageView
            android:id="@+id/card1Copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/card1"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl4Tv7"
            />

        <ImageView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/card1"
            android:layout_marginLeft="10dp"
            android:transitionName="transition_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl4Tv7"
            />

        <ImageView
            android:id="@+id/card2Copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/card1"
            android:layout_marginLeft="10dp"
            android:transitionName="transition_image"
            app:layout_constraintLeft_toRightOf="@id/card1"
            app:layout_constraintTop_toBottomOf="@id/cl4Tv7"
            />

        <ImageView
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/card2"
            android:layout_marginLeft="10dp"
            android:transitionName="transition_image"
            app:layout_constraintLeft_toRightOf="@id/card1"
            app:layout_constraintTop_toBottomOf="@id/cl4Tv7"
            />


        <ImageView
            android:id="@+id/card3Copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/card1"
            android:layout_marginLeft="10dp"
            android:transitionName="transition_image"
            app:layout_constraintLeft_toRightOf="@id/card2"
            app:layout_constraintTop_toBottomOf="@id/cl4Tv7"
            />

        <ImageView
            android:id="@+id/card3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/card3"
            android:layout_marginLeft="10dp"
            android:transitionName="transition_image"
            app:layout_constraintLeft_toRightOf="@id/card2"
            app:layout_constraintTop_toBottomOf="@id/cl4Tv7"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
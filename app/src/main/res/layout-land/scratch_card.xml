<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/rl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:id="@+id/cl4_tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赠送刮奖机会 1 次"
            android:textColor="#333333"
            android:textSize="14sp"
            android:gravity="left"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/cl4_tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计剩余3次"
            android:paddingLeft="13dp"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/cl4_tv7"
            app:layout_constraintBottom_toBottomOf="@id/cl4_tv7"
            app:layout_constraintTop_toTopOf="@id/cl4_tv7"
            />

        <ImageView
            android:id="@+id/cl3_im2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="3dp"
            app:layout_constraintRight_toLeftOf="@id/cl4_tv9"
            app:layout_constraintBottom_toBottomOf="@id/cl4_tv7"
            app:layout_constraintTop_toTopOf="@id/cl4_tv7"
            android:src="@drawable/refresh" />

        <TextView
            android:id="@+id/cl4_tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再刮一次"
            android:textColor="#999999"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cl4_tv7"
            app:layout_constraintTop_toTopOf="@id/cl4_tv7"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="207dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintWidth_default="spread"
            app:layout_constraintTop_toBottomOf="@id/cl4_tv7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/image_hand"
            android:layout_width="264dp"
            android:layout_height="86dp"
            android:layout_marginTop="83dp"
            android:src="@drawable/button2"
            app:layout_constraintTop_toBottomOf="@id/cl4_tv7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/image_hand2"
            android:layout_width="124dp"
            android:layout_height="86dp"
            android:layout_marginTop="118dp"
            android:layout_marginLeft="258dp"
            android:src="@drawable/hand"
            app:layout_constraintTop_toBottomOf="@id/cl4_tv7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>